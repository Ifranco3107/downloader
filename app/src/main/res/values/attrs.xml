    <declare-styleable name="SwipeBar">
        <attr format="string" name="inner_text"/>
        <attr format="color" name="inner_text_color"/>
        <attr format="dimension" name="inner_text_size"/>

        <attr format="reference" name="button_image_disabled"/>
        <attr format="reference" name="button_image_enabled"/>
        <attr format="reference" name="inner_text_background"/>
        <attr format="dimension" name="button_left_padding"/>
        <attr format="dimension" name="button_right_padding"/>
        <attr format="dimension" name="button_top_padding"/>
        <attr format="dimension" name="button_bottom_padding"/>
        <attr format="reference" name="button_background"/>

        <attr format="dimension" name="inner_text_left_padding"/>
