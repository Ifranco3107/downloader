        <attr format="dimension" name="inner_text_top_padding"/>
        <attr format="dimension" name="inner_text_bottom_padding"/>
        <attr format="boolean" name="has_activate_state"/>
        <attr format="dimension" name="button_image_width"/>
        <attr format="dimension" name="button_image_height"/>
        <attr format="boolean" name="button_trail_enabled"/>
        <attr format="reference" name="button_trail_drawable"/>
        <attr format="enum" name="initial_stated">
            <enum name="enabled" value="0"/>
            <enum name="disabled" value="1"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="MacroButton">
        <attr name="expanded" format="boolean" />
        <attr name="Text" format="string" />
        <attr name="Icon" format="integer" />
    </declare-styleable>

